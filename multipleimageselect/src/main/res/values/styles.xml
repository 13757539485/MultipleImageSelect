<resources>

    <!-- Base application theme. -->
    <style name="MultipleImageSelectTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#FF5722</item>
        <item name="colorAccent">#2196F3</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="scrollbar">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    </style>

</resources>
